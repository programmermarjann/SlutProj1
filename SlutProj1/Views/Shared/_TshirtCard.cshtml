@model Tshirt


<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model./css/Images/Merch/T_shirt.jpg" />." alt=""
        
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a asp-controller="Tshirt"
                   asp-action="Size"
                   asp-route-id="@Model.TshirtID">@Model.Size</a>
            </h3>
            <p>@Model.Size</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-tshirtId="@Model.TshirtID">Add to cart</a>
            </p>
        </div>
    </div>
</div>